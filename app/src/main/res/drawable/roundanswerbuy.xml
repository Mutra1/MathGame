<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2F9219" />
            <gradient android:angle="-90" android:startColor="#46B62D" android:endColor="#278C12"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2F9219" />
            <solid android:color="#2DA513"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2F9219" />
            <gradient android:angle="-90" android:startColor="#49BF2F" android:endColor="#2DA513" />
        </shape>
    </item>
</selector>