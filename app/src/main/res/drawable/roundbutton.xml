<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1E6D2F" />
            <gradient android:angle="-90" android:startColor="#21913A" android:endColor="#107D28"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1E6D2F" />
            <solid android:color="#12872C"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1E6D2F" />
            <gradient android:angle="-90" android:startColor="#25A341" android:endColor="#12872C" />
        </shape>
    </item>
</selector>